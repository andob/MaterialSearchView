<resources>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="msv_searchBackground">@color/theme_primary</item>

        <!-- Change voice icon-->
        <item name="msv_searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon-->
        <item name="msv_searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon-->
        <item name="msv_searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions-->
        <item name="msv_searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view-->
        <item name="msv_searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="msv_textColor">@color/theme_primary_text_inverted</item>

        <!-- Change hint text color for edit text-->
        <item name="msv_textColorHint">@color/theme_secondary_text_inverted</item>

        <!-- Hint for edit text-->
        <item name="msv_hint">@string/search_hint</item>
    </style>
</resources>
